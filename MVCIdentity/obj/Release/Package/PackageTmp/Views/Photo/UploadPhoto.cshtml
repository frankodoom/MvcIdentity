

@{
    ViewBag.Title = "UploadPhoto";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-4 col-md-offset-4" style="margin-top:100px">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Upload Photos</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-wrench"></i>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </div>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        @if (ViewBag.Message == "Success")
                        {
                            <p style="color:green; text-align:center"> @ViewBag.Message</p>
                        }
                        else
                        {
                            <p style="color:red; text-align:center"> @ViewBag.Message
                            </p>
                        }

                        <form method="post" action="/Photo/UploadPhotos" enctype="multipart/form-data">
                            <input type="file" name="files" multiple class="form-control" />


                            <br />
                            <button type="submit" class="btn btn-info btn-block"> Upload Image</button>
                        </form>
                        <!-- /.chart-responsive -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- ./box-body -->
            <div class="box-footer">
                <!-- /.row -->
            </div>
            <!-- /.box-footer -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>




